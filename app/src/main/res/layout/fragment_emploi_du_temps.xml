<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.m2dl.mapus.mapus.EmploiDuTempsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Date du jour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jour"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="normal|bold"
            android:padding="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/divider2"
            android:id="@+id/imageView2" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="10dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:divider="@drawable/divider2"
            android:cacheColorHint="@color/common_google_signin_btn_text_dark_disabled">
        </ListView>
    </LinearLayout>
</FrameLayout>
